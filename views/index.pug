extends layout

mixin segment(section) 
  section
  h1.heading= section

mixin listItem(info)
  li= info  

mixin project(name, description, link, url)
  article
  header
  h1(
    class= 'inline'
  )= name
  if(link)
    a(
      href= url
      target= "_blank"
    )= link
  p.description= description

mixin school(name, location, date, description, description2)
  article
  header
    h1= name
    span= location
    time= date
  p= description
  if(description2)
    p=description2

